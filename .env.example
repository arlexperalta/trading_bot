# ================================================
# Crypto Trading Bot - Environment Variables
# ================================================
# Copy this file to .env and fill in your values
# For Coolify deployment, set these as environment variables

# ------------------------------------------------
# Trading Mode
# ------------------------------------------------
# TESTNET = Use Binance Testnet (recommended for testing)
# PRODUCTION = Use real Binance API (real money!)
TRADING_MODE=TESTNET

# ------------------------------------------------
# Binance Testnet API Credentials
# ------------------------------------------------
# Get your testnet keys from: https://testnet.binancefuture.com/
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# ------------------------------------------------
# Binance Production API Credentials (Optional)
# ------------------------------------------------
# Only needed if TRADING_MODE=PRODUCTION
# Get your keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ------------------------------------------------
# Trading Configuration
# ------------------------------------------------
TRADING_PAIR=BTCUSDT
INITIAL_CAPITAL=100
MAX_LEVERAGE=2
RISK_PER_TRADE=0.01

# ------------------------------------------------
# Telegram Notifications (Optional)
# ------------------------------------------------
# Create a bot via @BotFather and get your chat ID
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ------------------------------------------------
# Dashboard Configuration
# ------------------------------------------------
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000
